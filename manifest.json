{
  "name": "Alphy",
  "version": "0.1.0",
  "description": "Transcribe, question, and summarize YouTube videos and Twitter Spaces",
  "permissions": ["identity"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions": [
    "https://*.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.youtube.com/*"
      ],
      "js": [
        "contentScript.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/bookmark.png",
        "assets/play.png",
        "assets/delete.png",
        "assets/save.png",
        "typed.min.js"
      ],
      "matches": [
        "https://*.youtube.com/*"
      ],
      "use_dynamic_url": false
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/ext-icon.png",
      "24": "assets/ext-icon.png",
      "32": "assets/ext-icon.png"
    },
    "default_title": "Alphy"
  },
  "manifest_version": 3
}